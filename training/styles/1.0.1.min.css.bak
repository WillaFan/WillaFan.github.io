 
 body {
	 
	background-color: #E6E6FA;
	font-family: Segoe UI; font-size: 14pt;
	
	display: grid; grid-template-rows: 20% 60% 20%;	grid-template-columns: 25% 50% 25%;
	
	grid-template-areas: "header header header" "ads main links" "footer footer footer";
	
	
 }
 
 header {
	 
	grid-area: header; position: fixed; z-index: 999;
	
	background: linear-gradient(180deg, #E6E6FA 70%, #D8BFD8 100%);
	color: #FFFFFF; font-family: Verdana; font-size: 18px;
	top: 0; left: 0; width: 100%; height: 10%;
 }