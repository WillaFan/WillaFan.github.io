 
 body {
	 
	background-color: #FFFDF7;
	font-family: Times New Roman; font-size: 11pt;
	
	display: grid; grid-template-rows: 20% 60% 20%;	grid-template-columns: 25% 50% 25%;
	
	grid-template-areas: "header header header" "ads main links" "footer footer footer";
	
	
 }
 
 header {
	 
	grid-area: header; position: fixed; 
	
	background: #000000;
	color: #FFFFFF; font-weight: bolder; font-family: Arial; size: 18pt;
	top: 0; left: 0; width: 100%; height: 10%;
	
	border-bottom-color: #595959; border-bottom-width: 10px;
 }
 
 .head-bottom {
	 
	background: #000000; top: 10%; left: 0; width: 100%; height: 0.8%; position: fixed;
	background-color: #595959;
	 
 }